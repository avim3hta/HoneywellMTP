<Window x:Class="MTPSimulator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MTP OPC UA Simulator" Height="720" Width="1080" MinHeight="560" MinWidth="960">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" Spacing="8">
            <Button x:Name="BtnLoadMtp" Content="Load MTP..." Width="120" Click="BtnLoadMtp_Click" />
            <TextBox x:Name="TxtEndpoint" Width="360" VerticalAlignment="Center" Text="127.0.0.1:4840" />
            <Button x:Name="BtnStart" Content="Start Server" Width="120" Click="BtnStart_Click" />
            <Button x:Name="BtnStop" Content="Stop Server" Width="120" Click="BtnStop_Click" />
            <TextBlock x:Name="TxtStatus" Margin="16,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="MTP Nodes" Margin="0,0,8,0">
                <TreeView x:Name="TreeNodes"/>
            </GroupBox>
            <GroupBox Grid.Column="1" Header="Live Values">
                <DataGrid x:Name="GridValues" AutoGenerateColumns="False" IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding NodeId}" Header="NodeId" Width="*"/>
                        <DataGridTextColumn Binding="{Binding DisplayName}" Header="Name" Width="2*"/>
                        <DataGridTextColumn Binding="{Binding DataType}" Header="Type" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Value}" Header="Value" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </DockPanel>
    
</Window>

